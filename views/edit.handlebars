<form id="documentUploadForm" enctype="multipart/form-data">
  <div>
    <label for="profile-image">Cargar imagen de perfil:</label>
    <input type="file" id="profile-image" name="profileImage" accept=".pdf,.jpg,.jpeg,.png" required>
  </div>
  
  <div class="form-group">
    <label for="inputNombre">Nombre</label>
    <input id="inputNombre" name="nombre" type="text" placeholder="nombre" autocomplete="on"><br>
  </div>
  
  <div class="form-group">
    <label for="inputApellido">Apellido</label>
    <input id="inputApellido" name="apellido" type="text" placeholder="apellido" autocomplete="on"><br>
  </div>
  
  <button type="submit">Modificar!</button>
</form>
  <script src="/public/js/edit.js"></script>